// ======= BANK SOAL =======
const BANK = [
  {
    clue: "Aku berkaki dua, pandai meniru suara, hobi memanjat. Aku siapa?",
    answer: "burung beo",
    choices: ["burung beo","orangutan","kanguru","kakatua"],
  },
  {
    clue: "Tubuhku belang, larinya kencang, mirip kuda tapi bukan.",
    answer: "zebra",
    choices: ["kuda","zebra","keledai","rusa"],
  },
  {
    clue: "Aku raja hutan, suaraku menggelegar.",
