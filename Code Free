// ======= UTIL =======
const $ = (id) => document.getElementById(id);
function shuffle(arr){
  for(let i = arr.length - 1; i > 0; i--){
    const j = Math.floor(Math.random() * (i + 1));
    [arr[i], arr[j]] = [arr[j], arr[i]];
  }
  return arr;
}

// ======= STATE =======
let mode = 'med';   // easy|med|hard
let order = [];     // index urutan soal
let index = 0;      // posisi saat ini
let score = 0;
let locked = false; // sudah dijawab atau belum
let selected = null;// indeks opsi yang dipilih
let timer = null;   // interval
let seconds = 0;    // waktu main

// ======= DOM REF =======
const qEl = $('question');
const opsEl = $('options');
const sIndex = $('sIndex');
const sScore = $('sScore');
const sTime = $('sTime');
const bar = $('bar');
const answerBtn = $('answerBtn');
const nextBtn = $('nextBtn');
const retryBtn = $('retryBtn');

// ======= RENDER =======
function formatTime(s){
  const m = Math.floor(s/60).toString().padStart(2,'0');
  const ss = (s%60).toString().padStart(2,'0');
  return `${m}:${ss}`;
}
function startTimer(){
  clearInterval(timer);
  timer = setInterval(()=>{
    seconds++; sTime.textContent = formatTime(seconds);
  }, 1000);
}

function buildOrder(){
  const count = 10; // total soal per sesi
  const ids = Array.from({length:BANK.length}, (_,i)=>i);
  shuffle(ids);
  order = ids.slice(0, count);
}

function choiceCountByMode(){
  return mode==='easy' ? 3 : mode==='hard' ? 5 : 4;
}

function renderQuestion(){
  locked = false; selected = null; answerBtn.disabled=false;
  const qid = order[index];
  const item = BANK[qid];
  qEl.textContent = item.clue;

  // buat opsi sesuai mode
  const choices = new Set([item.answer]);
  const pool = shuffle([...BANK.flatMap(q=>q.choices)]);
  for(const c of pool){
    if(choices.size >= choiceCountByMode()) break;
    if(!choices.has(c)) choices.add(c);
  }
  const finalChoices = shuffle([...choices]).slice(0, choiceCountByMode());

  opsEl.innerHTML = '';
  finalChoices.forEach((opt, i)=>{
    const btn = document.createElement('button');
    btn.className = 'btn';
    btn.textContent = opt.charAt(0).toUpperCase()+opt.slice(1);
    btn.onclick = ()=>{
      if(locked) return;
      [...opsEl.children].forEach(b=>b.classList.remove('selected'));
      btn.classList.add('selected');
      selected = i;
      // simpan jawaban terpilih ke data-
      opsEl.dataset.answer = item.answer;
      opsEl.dataset.correctIndex = finalChoices.indexOf(item.answer);
      opsEl.dataset.selectedIndex = i;
    };
    opsEl.appendChild(btn);
  });

  sIndex.textContent = `${index+1}/${order.length}`;
  bar.style.width = `${((index)/order.length)*100}%`;
}

function markAnswers(){
  if(locked) return; locked = true;
  answerBtn.disabled = true;
  const correctIdx = Number(opsEl.dataset.correctIndex);
  const selIdx = Number(opsEl.dataset.selectedIndex);

  [...opsEl.children].forEach((btn, i)=>{
    if(i === correctIdx) btn.classList.add('good');
    if(i === selIdx && selIdx !== correctIdx) btn.classList.add('bad');
    btn.disabled = true;
  });

  if(selIdx === correctIdx){
    score += 10; sScore.textContent = score;
  }
}

function nextQuestion(){
  if(index < order.length - 1){
    index++; renderQuestion();
  } else {
    finish();
  }
}

function finish(){
  clearInterval(timer);
  bar.style.width = '100%';
  qEl.innerHTML = `üéâ Selesai! Skor akhir kamu <b>${score}</b> dari ${order.length*10}.<br>`+
                  `Waktu: <b>${formatTime(seconds)}</b>. Klik <b>Ulangi</b> untuk main lagi!`;
  opsEl.innerHTML = '';
  answerBtn.disabled = true; nextBtn.disabled = true;
}

function reset(){
  score = 0; index = 0; seconds = 0;
  sScore.textContent = '0'; sTime.textContent = '00:00';
  buildOrder(); renderQuestion(); startTimer();
  answerBtn.disabled = false; nextBtn.disabled = false;
}

// ======= EVENTS =======
answerBtn.addEventListener('click', markAnswers);
nextBtn.addEventListener('click', nextQuestion);
retryBtn.addEventListener('click', reset);

$('modeEasy').addEventListener('click', ()=>{mode='easy'; reset();});
$('modeMed').addEventListener('click', ()=>{mode='med'; reset();});
$('modeHard').addEventListener('click', ()=>{mode='hard'; reset();});

// ======= INIT =======
buildOrder(); renderQuestion(); startTimer();
</script></body>
</html>
